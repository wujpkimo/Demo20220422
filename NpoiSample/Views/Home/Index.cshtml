@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post" asp-controller="Upload" enctype="multipart/form-data">
    <div class="form-group">
        <label for="formFile" class="form-label">Large file input example</label>
        <input class="form-control form-control-lg" name="formFile" id="formFile" type="file" accept=".xlsx">
        <input type="submit" class='btn btn-primary' value="Upload" />
    </div>
</form>